<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#315331"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:padding="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_title"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:text="Fl Studio Lesson 1"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:text="To Learn FlStudio in Myanmar Version You Can Learn This Videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtubeVideo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="200dp"/>
        <Button
                android:text="Play"
                android:id="@+id/bt_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:targetApi="n"/>

    </LinearLayout>

</android.support.v7.widget.CardView>